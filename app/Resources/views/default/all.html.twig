{% extends 'base.html.twig' %}
{% block title %}Home{% endblock %}

{% block body %}
    {% include 'default/navbar.html.twig' %}
    <div class="container" style="padding-top:20px;">
        <h4>Liste des restaurants de Los Angeles</h4>
        <div class="row">
            {% for restaurant in restaurants %}
                <ul class="grid cs-style-1">
                    <li>
                        <figure>
                            <img src="/build/img/{{ random(17) }}.jpg" alt="Image Restau" style="border-radius:2%;width:300px;height:200px">
                            <figcaption style="z-index:2">
                                <h3 class="truncate">{{ restaurant.facilityName }}, {{ restaurant.facilityCity }}</h3>
                                <span>{{ restaurant.score }}, {{ restaurant.grade }}</span>
                                <span>{{ restaurant.peDescription }}</span>
                                <a href="{{ path('single_restaurant', { 'id': restaurant.id }) }}">Voir plus</a>
                            </figcaption>
                        </figure>
                        <div class="figui">
                            <span>{{ restaurant.facilityName }}, {{ restaurant.facilityCity }}</span>
                        </div>
                    </li>
                </ul>
            {% endfor %}
        </div>
    </div>
{% endblock %}